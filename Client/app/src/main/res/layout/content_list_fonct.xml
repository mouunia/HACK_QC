<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.khalilbennani.gestiondesarbres.ListFonctActivity"
    tools:showIn="@layout/activity_list_fonct">

    <Button
        android:id="@+id/buttonSaisir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:onClick="onEditButton"
        android:enabled="false"
        android:text="Saisir information" />

    <Button
        android:id="@+id/buttonDetecter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="detecter automatiquement"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSaisir" />


</LinearLayout>
